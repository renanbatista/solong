{
    "tasks": [
        {
            "type": "shell",
            "label": "clang build",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-ldl",
                "-lglfw",
                "-pthread",
                "-lm",
                "-g",
                "${file}",
                "handle_initial_window.c",
                "handle_close_map.c",
                "handle_list.c",
                "images.c",
                "keypress.c",
                "move.c",
                "utils.c", 
                "gnl/get_next_line.c",
                "gnl/get_next_line_utils.c",
                "printf/ft_itoa.c",
                "printf/ft_printf.c",
                "printf/utils.c",
                "../MLX42/build/libmlx42.a",
                "-I./include",
                "-I./MLX42/include/MLX42",
                "-o",
                "${fileDirname}/../so_long"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}